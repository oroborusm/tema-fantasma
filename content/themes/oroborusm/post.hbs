
{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<main class="content" role="main">
    <section class="internoPost">

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}
        <div class="cabecera">
            <span class="fecha">
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}
                </time>
            </span>

            <h1>
                {{{title}}}
            </h1>
        </div>
        

        <article class="contenidoPost">
            {{content}}
        </article>


        <div class="tags">
            {{tags prefix=" tags " separator=" | "}}
        </div>
        
        <article class="author">
            <h4>{{author.name}}</h4>
            <p>{{author.bio}}</p>
            <ul class="author-meta clearfix">
                {{#if author.location}}<li>{{author.location}}</li>{{/if}}
                {{#if author.website}}<li><a href="{{author.website}}">{{author.website}}</a></li>{{/if}}
            </ul>
        </article>
        
    </section>

    

